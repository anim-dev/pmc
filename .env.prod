#General configuration
# ENV = DEVELOPMENT

# NODE_ENV=dev
# PORT=3001
# DATABASE_URL="postgresql://postgres:password@localhost:5432/devdb"

# Environment
ENV=development               # or production, test, etc.
NODE_ENV=development

# Backend
SSL=http                     # true or false
BACKEND_IP=127.0.0.1
BACKEND_PORT=3001              # <-- you asked this to be 300
API_HOST=${SSL}://${BACKEND_IP}:${BACKEND_PORT}

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Security
ENCRYPTION_KEY=replace_with_a_strong_random_key_here
SALT_ROUNDS=10                # bcrypt rounds (number)

DATABASE_URL="postgresql://postgres:123456@localhost:5432/devdb"

# Postgres DB (primary)
DB_USER_PG=postgres
DB_HOST_PG=127.0.0.1
DB_PORT_PG=5432
DB_PASSWORD_PG=password
DB_NAME_PG=devdb

# Connection pool and timeouts
DB_POOL_MAX=50
DB_POOL_MIN=5
DB_IDLE_TIME_PG=60000                # milliseconds
DB_ACC_TIME_OUT_MILL_SEC_PG=10000   # acquire timeout milliseconds
DB_CONN_TIME_MILL_SEC_PG=5000       # connection timeout milliseconds
DB_MAX_USERS=7500                    # maxUses semantic from your config
DB_ALW_EXIT_IDLE_PG=false            # allowExitOnIdle
DB_MAX_LIF_TME_MILL=600000          # maxLifetimeMillis (milliseconds)

# Optional flags / extras
# If you need SSL for Postgres connection, set DB_SSL=true (getPostgresSSLConfig should handle this)
DB_SSL=false